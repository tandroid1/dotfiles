# Include git user settings
[include]
    path = gituser
[alias]
  st = status
  cm = commit
  br = branch -av
  co = checkout
  cod = checkout develop
  com = checkout master
  pa = push --all
  pt = push --tags
  pat = !git pa && git pt
  pu = push -u
  pua = push -u --all
  aa = add -A :/
  fi = flow init -d
  fs = flow feature start
  ff = flow feature finish
  rs = flow release start
  rf = flow release finish
  hs = flow hotfix start
  hf = flow hotfix finish
  df = diff
  lg = log -p
  lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
  rl = reflog
  rb = rebase
[push]
  default = simple
[color]
  ui = true
[init]
  templatedir = ~/.git_template
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
